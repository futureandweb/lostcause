#progression-sidebar
  position relative
  text-align center
  background bg-overlay-url-half 90% 15% no-repeat

  .location-wrapper
    position relative
    height 41px
    width 350px
    p 
      position absolute
      top 23px 
      right 10px
      letter-spacing 3px 
      font-size 12px 
      font-family Orbitron-Light
      text-shadow 1px 1px 1px rgba(0,0,0,0.75)
      filter dropshadow(color=#000000, offx=1, offy=1)
  .location
    position absolute
    left 0px
    top 0px
    height 41px
    width 350px
  .pg-loc-mc
    background url(../img/progression/mc.jpg) 0 0
  .pg-loc-ac
    background url(../img/progression/ac.jpg) 0 0 
  .pg-loc-sjg
    background url(../img/progression/sjg.jpg) 0 0 
  .pg-loc-cof
    background url(../img/progression/cof.jpg) 0 0
  .pg-loc-tot
    background url(../img/progression/tot.jpg) 0 0 
  .pg-loc-et
    background url(../img/progression/et.jpg) 0 0
  .pg-status-complete
    background-color rgba(0,255,50,0.35)
  .pg-status-partial
    background-color rgba(255,255,0,0.45)
  .pg-status-none
    background-color rgba(255,0,0,0.35)